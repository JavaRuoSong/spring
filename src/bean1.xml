<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--配置User对象创建-->

<!--使用set方法-->
    <bean id = "user" class = "com.atguigu.spring5.User">

        <!--使用property完成属性注入
            name：属性名
            value：注入的值
        -->

        <property name="name" value="耿怡"></property>
        <property name="age" value="21"></property>
        <property name="book" ref="book"></property>
        <!--
            属性有空值

        <property name="gender">-->
            <!--<null/>-->
        <!--</property>-->

        <!--属性包含特殊符号
                1.使用转义字符  &lt; 表示 <    &gt;表示 >
                2.把带特殊符号内容写到CDATA
        -->
        <!--<property name="gender" value="&lt;男&gt;"></property>-->
        <property name="gender">
            <value><![CDATA[<女>]]></value>

        </property>

        <!--使用有参构造器注入属性-->
    </bean>
    <!--通过构造器注入属性-->
    <bean id = "book" class="com.atguigu.spring5.Book">
        <property name="name" value="易筋经"></property>
        <!--<constructor-arg name = "name" value="易筋经"></constructor-arg>-->
        <!--<constructor-arg name = "price" value="25" ></constructor-arg>-->



    </bean>

</beans>